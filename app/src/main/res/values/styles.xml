<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_up</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="RoundedEditTextStyle">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>
    <style name="CustomEditTextStyle">
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">Enter text here</item>
        <item name="android:textColorHint">#888888</item>
    </style>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomSpinnerDropdownStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <!-- Устанавливаем цвет фона для ProgressBar -->
        <item name="android:progressDrawable">@drawable/progress_background</item>
        <!-- Устанавливаем высоту ProgressBar -->
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="NoUnderlineTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
    </style>
</resources>

